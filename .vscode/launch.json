{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug .NET MAUI Android",
            "type": "dotnet",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0-android/com.companyname.vendorapp-Signed.apk",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "logging": {
                "moduleLoad": false
            },
            "env": {
                "ANDROID_SDK_ROOT": "${env:HOME}/Android/Sdk",
                "DOTNET_MAUI_ANDROID_EMULATOR": "Pixel_5_API_33" // Your AVD name
            },
            "preLaunchTask": "build-android-debug"
        }
    ]
}